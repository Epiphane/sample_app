<% provide(:title, 'Edit Profile') %>
<h1>Edit Profile</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'fields', f: f %>
			
			<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
		<% end %>
	
		<%= gravatar_for @user, size: 50 %>
		<a href="http://gravatar.com/emails">change</a>
	</div>
</div>